extends layout

block content
	div(class='row')
		div(class='col s12')
			each device in devices	
				div(class='col s4')
					div(class='card')
						div(class='card-image waves-effect waves-block waves-light')
							img(src=device.value.image, class='activator', height='240px')
						div(class='card-content')
							span(class='card-title activator grey-text text-darken-4')= device.value.name
								i(class='material-icons right') more_vert
							p= device.value.description
						div(class='card-reveal')
							span(class='card-title grey-text text-darken-4')= device.value.name
								i(class='material-icons right') close
							p= device.value.description
							a(href='/device?name=#{device.value.name}') Device Integration Instructions
	- var n = 0
		ul(class='pagination')
			while n < num
				if n == cur
					li(class='active')
						a(href='#')= n
				else
					li(class='waves-effect')
						a(href='/list?page=#{n}')= n	
				- n++
				